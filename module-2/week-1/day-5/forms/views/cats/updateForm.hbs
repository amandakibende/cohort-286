<form method="POST" action="/cats/{{cat._id}}/update">

  <h2>Updating {{cat.name}} !</h2>
  <div>
    <label for="name">Name</label>
    <input type="text" id="name" name="name" value="{{cat.name}}" />
  </div>
  <div>
    <label for="color">Color</label>
    <input type="text" id="color" name="color" value="{{cat.color}}" />
  </div>
  <div>
    <label for="age">Age</label>

    <input id="age" type="number" name="age" value="{{cat.age}}" />
  </div>

  <button>Submit !</button>
</form>